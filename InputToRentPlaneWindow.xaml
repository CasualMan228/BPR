<Window x:Class="BPR.InputToRentPlaneWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:BPR"
 mc:Ignorable="d"
 Icon="app.ico"
 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 Title="Окно предварительной аренды самолета" Height="195" Width="375" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBox x:Name="textBoxDays" HorizontalContentAlignment="Center" materialDesign:HintAssist.Hint="Введите количество суток для аренды" Style="{StaticResource MaterialDesignFloatingHintTextBox}" CaretBrush="#191970" Margin="0,10,0,20" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
            <Button Click="OkButtonClick" Width="150" Content="OK" Margin="0 25 0 0" Background="#4682B4" BorderBrush="#4682B4" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>