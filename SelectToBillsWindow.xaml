<Window x:Class="BPR.SelectToBillsWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:BPR"
 mc:Ignorable="d"
 Icon="app.ico"
 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 Title="Окно учета бронирований" Height="272" Width="325" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="В каком формате вы хотите увидеть выставленные счета?" TextWrapping="Wrap" TextAlignment="Center" FontSize="18" FontWeight="Medium" HorizontalAlignment="Center" Margin="10, 10, 10, 30"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <Button Grid.Column="0" Click="WordButtonClick" Width="125" Content="Word" Margin="0 0 0 0" Background="#4682B4" BorderBrush="#4682B4" HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="0" Text="MS Word должен быть установлен!" FontSize="10" HorizontalAlignment="Center" TextAlignment="Center" Height="30" Width="110" TextWrapping="Wrap" Margin="0 5 0 0"/>
                </StackPanel>
                <Button IsEnabled="False" Grid.Column="1" Click="BillsButtonClick" Width="125" Content="В окне" Margin="0 0 0 0" Background="#4682B4" BorderBrush="#4682B4" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Grid>
            <Button Click="OkButtonClick" Width="150" Content="OK" Margin="0 25 0 0" Background="#4682B4" BorderBrush="#4682B4" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
