<Window x:Class="BPR.SortWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:local="clr-namespace:BPR"
 mc:Ignorable="d"
 Icon="app.ico"
 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 Title="Окно сортировки" Height="220" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Отсортировать по" FontSize="18" FontWeight="Medium" HorizontalAlignment="Center" Margin="0, 10, 0, 20"/>
            <ComboBox x:Name="sortComboBox" Width="200" Height="30" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0, 0, 0, 20" FontWeight="Medium" Padding="6 6 -10 0">
                <ComboBoxItem Content="умолчанию"/>
                <ComboBoxItem Content="цене (возрастание)"/>
                <ComboBoxItem Content="цене (убывание)"/>
                <ComboBoxItem Content="году создания (возрастание)"/>
                <ComboBoxItem Content="году создания (убывание)"/>
                <ComboBoxItem Content="общему налету (возрастание)"/>
                <ComboBoxItem Content="общему налету (убывание)"/>
            </ComboBox>
            <Button Click="OkButtonClick" Width="150" Content="OK" Margin="0 25 0 0" Background="#4682B4" BorderBrush="#4682B4" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
